<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/playlist_fixed_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/playlist_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        tools:src="@drawable/ambient"
        android:contentDescription="@string/playlist_title" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/playlist_title_textsize"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        app:fontFamily="sans-serif"
        android:textColor="@android:color/white"
        android:background="#55000000"
        android:padding="@dimen/playlist_title_padding"
        android:drawableRight="@drawable/ic_chevron_right"
        android:drawableEnd="@drawable/ic_chevron_right"
        tools:text="Playlist title" />
</RelativeLayout>